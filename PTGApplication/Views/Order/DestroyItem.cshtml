@model PTGApplication.Models.UzimaInventory


@{
    ViewBag.Title = "Destroy Item";
}


<h2>Destroy an Item</h2>

@using (Html.BeginForm("DestroyItem", "Order", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="destroyform">

        <div class="form-group">
            <label class="control-label col-md-2">Drug</label>
            <div class="col-md-10">
                <input size="50" type="text" readonly class="form-control-plaintext" name="drugname" id="drugname" value="@ViewBag.Drug.DrugName">
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Quantity *", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="text" id="txtQty" name="txtQty" class="form-control" placeholder="@ViewBag.Quantity" required>
                <label id="msgWarning"></label>
                @Html.ValidationMessage("", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="btnSubmit" type="button" value="Submit" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<script>
    let maxQuantity = @(ViewBag.Quantity)

        $('#btnSubmit').click(() => {
            let inputVal = $('#txtQty').val()
            if (inputVal > maxQuantity) {
                $('#msgWarning').text('Must be less than or equal to ' + maxQuantity)
            } else {
                let dname = $('#drugname').val()
                let tQty = $('#txtQty').val()
                $.ajax({
                    type: 'POST',
                    url: `/Order/DestroyItem/${dname}?txtQty=${tQty}`,
                    data: $('#destroyform').serialize()
                })
            }
        })
</script>

