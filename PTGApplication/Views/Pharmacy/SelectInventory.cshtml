@model IEnumerable<PTGApplication.Models.PharmacyInventory>

@{
    ViewBag.Title = "Select Inventory";
}

<h2>Select Inventory to Modify</h2>


<table class="table">
    <tr>
        <th>Id</th>
        <th>Order Date</th>
        <th>Expiration Date</th>
        <th>Barcode</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOrdered)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DrugId)
        </td>
        <td>
            @Html.ActionLink("Modify", "ModifyInventory", new { id=item.Id }) |
            @Html.ActionLink("Remove", "RemoveInventory", new { id=item.Id })
        </td>
    </tr>
}

</table>
