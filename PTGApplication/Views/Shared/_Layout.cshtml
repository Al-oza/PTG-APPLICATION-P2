@{
    ViewBag.Company = "Uzima Rx";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - @ViewBag.Company </title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Uzima Rx", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Administration", "Index", "Administration", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Order", "Index", "Order", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Inventory", "Index", "Inventory", new { area = "" }, null)</li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarReportsDropdown" data-toggle="dropdown" 
                           aria-haspopup="true" aria-expanded="false">Reports</a>
                        <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarReportsDropdown">
                            @Html.ActionLink("Pending Orders", "PendingOrders", "Report", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Inventory by Location", "Inventory", "Report", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Expired Drugs", "ExpiredDrugs", "Report", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Expiring Drugs", "ExpiringDrugs", "Report", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Dispensed Drugs", "DispensedDrugs", "Report", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Destroyed Drugs", "DestroyedDrugs", "Report", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarLocationsDropdown" data-toggle="dropdown" 
                           aria-haspopup="true" aria-expanded="false">Locations</a>
                        <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarLocationsDropdown">
                            @Html.ActionLink("Add Clinic", "AddClinicLocation", "Location", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Add Hospital", "AddHospitalLocation", "Location", null, new { @class = "dropdown-item" })
                            @Html.ActionLink("Add Supplier", "AddSupplierLocation", "Location", null, new { @class = "dropdown-item" })
                        </div>
                    </li>
                </ul>

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)

    <div class="container body-content">
        @RenderBody()
        @RenderSection("SPAViews", required: false)
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year @ViewBag.Company</p>
        </footer>
    </div>
</body>
</html>
